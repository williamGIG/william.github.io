<!--components/musicCon/musicCon.wxml-->
<view class="container"  >
    <image class="classic-img {{playing?'rotation':''}}" src="{{imgPic}}" />
    <image class="player-img"  bind:tap="onPlay" 
        src="{{!playing?playSrc:pauseSrc}}" />
    <image class="tag" src="../images/music@tag.png" />
    <view class="content">
    <text>歌手：{{author}}</text>
      <text>曲目：{{musicTitle}}</text>
     <text>时长：{{time}}</text>
     </view>

</view>