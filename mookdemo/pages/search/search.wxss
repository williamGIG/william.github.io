/* pages/search/search.wxss */
.header{
  background-color: #ffffff;
  height:100rpx;
  width:100%;
  border-top:1px solid #f5f5f5;
  border-bottom:1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow:0 0 3px 0 #e3e3e3; 
  z-index: 99;
  position: fixed;
}

.head-img{
  width:106rpx;
  height:34rpx;
  margin-top:40rpx;
}
.box image{
  margin-right:10px;
  width:14px;
  height:14px;
  margin-bottom:-2px;
}
.box{
  display:flex; 
  flex-direction: row;
  justify-content: center;
  align-items: center; 
  border-radius: 50px;
  background-color: #F0EAEA;
  height: 34px;
  width:700rpx;
  color:#A5A5AA;
  font-size: 28rpx;
}
.hide{
  display: none;
}
